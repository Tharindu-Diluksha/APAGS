{% extends 'InstructorBundle:Default:index.html.twig'%}

{% block stylesheets %}
    <link href="{{ 	asset('bundles/instructor/bootstrap/dist/css/bootstrap.min.css')}}" type="text/css" rel="stylesheet"/>
    <link href="{{ asset('css/main.css') }}" type="text/css" rel="stylesheet" />
    <script src="{{ asset('bundles/instructor/bootstrap/jquery.min.js') }}"></script>
    <script src="bundles/instructor/bootstrap/dist/js/bootstrap.min.js"></script>
{% endblock %}


{% block content %}
    <!-- Custome content for pages goes here -->
    <div class="container">
        <h2>{{ classid }} Assignments</h2>
        <p>Click on class to for more details</p>

        {% for myassignment in assignments %}

            <div class="container" style="border: outset; width: 500px">

                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>{{ myassignment.name }}</th>
                        <th>Due On: {{ myassignment.dueDate|date("m/d/Y") }}</th>
                        <th>{{ myassignment.dueTime|date("H:i:s") }}</th>
                    </tr>
                    </thead>
                    <tbody>

                    <tr>
                        {#<td>{{ myassignment.description }}</td>#}
                        {{ myassignment.description }}
                        {#<td><a href="/ins_home">Last Assignment</a></td>
                        <td><a href="/ins_home">Next Assignment</a></td>#}
                    </tr>

                    <tr>
                        {#<td><a href="/ins_create_assignment_through_class/{{ myclass.id }}">Create Assignment</a></td>#}
                        <td>Total Marks:{{ myassignment.totalmarks }}</td>
                        <td><a href="/ins_see_submitted_results/{{ myassignment.id }}">See Submissions</a></td>
                        <td></td>

                    </tr>
                    {#<tr>
                        <td>July</td>
                        <td>Dooley</td>
                        <td>july@example.com</td>
                    </tr>#}
                    </tbody>
                </table>
            </div>

        {% endfor %}

    </div>
{% endblock %}