{% block content %}
	{{ form_start(form) }}
	{{ form_errors(form) }}
	<div class="container" style="padding-top: 1px">
		<div class="col-sm-8">
			<div id="codearea" class="container">
				{{ form_widget(form.task, { 'attr': {'style': 'float: left'} }) }}
			</div>
		</div>
		<div class="col-sm-4">
			<div>
				{{ form_widget(form.save) }}
			</div>
		</div>

	</div>
	{{ form_end(form) }}

{% endblock %}



