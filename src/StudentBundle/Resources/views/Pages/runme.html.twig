{% extends 'StudentBundle:Default:index.html.twig'%}

{% block header %}
<div class="container"> <!-- Header and navigation bar -->
  <div class="row" >
    <div class="col-sm-4" style=" float: left;text-align: left;padding-top: 8px; padding-left: 100px;">
      <p> Hello Student </p>
    </div>
    <div style="float: right;">
      <ul class="nav nav-tabs" role="tablist">
        <li><a href="/std_myhome">Home</a></li>
        <li><a href="#">My classes</a></li>
        <li class="active"><a href="/std_runme">Run Me</a></li>
        <li><a href="#">My Progress</a></li>
        <li><a href="#">My Account</a></li>        
      </ul>
    </div>    
