{% extends 'StudentBundle:Default:index.html.twig'%}
{% block stylesheets %}
    <link href="{{ 	asset('bundles/student/bootstrap/dist/css/bootstrap.min.css')}}" type="text/css" rel="stylesheet"/>
    <link href="{{ asset('css/main.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block content %}
    <!-- Custome content for pages goes here -->
    <div class="container">
        <h2>{{ classid }}</h2>
        <p>Click on the Submit Assignment to submit your answer</p>

        {% for myassignment in assignment %}

            <div class="container" style="border: outset; width: 500px">

                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>{{ myassignment.name }}</th>
                        <th>Due On: {{ myassignment.dueDate|date("m/d/Y") }}</th>
                        <th>{{ myassignment.dueTime|date("H:i:s") }}</th>
                    </tr>
                    </thead>
                    <tbody>

                    <tr>
                        {#<td>{{ myassignment.description }}</td>#}
                        {{ myassignment.description }}
                        {#<td><a href="/ins_home">Last Assignment</a></td>
                        <td><a href="/ins_home">Next Assignment</a></td>#}
                    </tr>

                    <tr>
                        {#<td><a href="/ins_create_assignment_through_class/{{ myclass.id }}">Create Assignment</a></td>#}
                        <td>Total Marks:{{ myassignment.totalmarks }}</td>
                        <td><a href="/std_submit_assignments_through_class/{{ myassignment.id }}">Submit Assignments</a></td>
                        <td></td>

                    </tr>
                    {#<tr>
                        <td>July</td>
                        <td>Dooley</td>
                        <td>july@example.com</td>
                    </tr>#}
                    </tbody>
                </table>
            </div>

        {% endfor %}

    </div>
{% endblock %}